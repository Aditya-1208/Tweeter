<h1>Sign-in</h1>

<%= form_with url: login_url do |form| %>
  <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email , class: "form-control", placeholder: "example@platform.com"%>
  </div>
  <div class="mb-3">
    <%= form.label :password %>
    <%=  form.password_field :password  , class: "form-control", placeholder: "What was it?"%>
    <%= link_to "forgot password?" ,password_reset_path %>
  </div>
  <div class="mb-3 d-flex justify-content-end">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
