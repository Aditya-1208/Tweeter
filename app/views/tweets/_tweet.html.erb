<div class="mb-3 card card-body">
<%= tweet.body %>
  <div class="d-flex justify-content-between align-items-center">
  <div class="me-4">
    <%= image_tag tweet.twitter_account.image, class:  "rounded-circle" %>
    <%= link_to "@#{tweet.twitter_account.username}", "https://twitter.com/#{tweet.twitter_account.username}", target: :_blank %>
  </div>
  <div>
    <% if tweet.published? %>
    <%= link_to "View tweet", "https://twitter.com/#{tweet.twitter_account.username}/satus/#{tweet.tweet_id}" , target: :_blank %>
      <% else %>
      <p>Scheduled for  <span class="fw-bold"><%= l tweet.publish_at, format: :long %></span></p>
      <%= link_to "Edit",edit_tweet_path(tweet), class: "btn btn-outline-primary" %>
      <%= link_to "Delete",tweet_path(tweet), method: :delete ,class: "btn btn-outline-danger", data: {confirm: "Are you sure?" }  %>
    <%end %>
  </div>
  </div>
</div>

